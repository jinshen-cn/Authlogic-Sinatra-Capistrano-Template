source :rubygems

# Use Sinatra to get some web services up easily.
gem "sinatra"

# Database - sqlite or mysql
# gem 'sqlite3'
gem 'mysql'

# Capistrano for deployments
gem "capistrano"

# Capistrano extension for deploying to different environments, Eg. staging and production
gem 'capistrano-ext'

# Needed for performing migrations
gem "sinatra-activerecord"

# ActiveRecord for database mapping
gem "activerecord"

# Authlogic for authentication
gem "authlogic"


